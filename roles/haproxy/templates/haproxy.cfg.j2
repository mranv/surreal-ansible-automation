global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend surrealdb_front
    bind *:8000
    default_backend surrealdb_nodes

backend surrealdb_nodes
    balance roundrobin
    option httpchk
    server primary {{ hostvars['primary']['ansible_host'] }}:{{ hostvars['primary']['surreal_port'] }} check
    server secondary1 {{ hostvars['secondary1']['ansible_host'] }}:{{ hostvars['secondary1']['surreal_port'] }} check
    server secondary2 {{ hostvars['secondary2']['ansible_host'] }}:{{ hostvars['secondary2']['surreal_port'] }} check